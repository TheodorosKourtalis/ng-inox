  <script>
    const translations = {
      nav_home:    { el:'Αρχική', en:'Home' },
      nav_about:   { el:'Προφίλ', en:'About Us' },
      nav_works:   { el:'Έργα', en:'Works' },
      nav_contact: { el:'Επικοινωνία', en:'Contact' },
      works_h2:    { el:'Έργα Μηχανουργείου', en:'Machining Works' },
      works_card1: { el:'Κατασκευές από ανοξείδωτο χάλυβα', en:'Stainless Steel Constructions' },
      stfab_intro: { el:'Στην NG Inox εξειδικευόμαστε σε πλήρεις κατασκευές από inox 316L: handrails, bitts, platforms, letters & fenders.', en:'At NG Inox we specialize in end‑to‑end 316L stainless steel constructions: handrails, bitts, platforms, letters & fenders.' }
      , stfab_intro1: {
          el:'Για την κατασκευή πλοίων και σκαφών αναψυχής είναι σημαντικό να χρησιμοποιείται ένα υλικό ικανό να αντέχει σε επιθετικά θαλάσσια κλίματα και να παραμένει ανθεκτικό στη διάβρωση μακροπρόθεσμα.',
          en:'For the construction of ships and recreational boats it is important to use a material capable of withstanding aggressive marine climates and remaining corrosion resistant in the long term.'
        }
      , stfab_intro2: {
          el:'Ο ανοξείδωτος χάλυβας είναι η φυσική επιλογή και προσδίδει ομορφιά σε κρουαζιερόπλοια, γιοτ και ferry boat.',
          en:'Stainless steel is the natural choice and adds beauty to cruise ships, yachts, and ferry boats.'
        }
      , stfab_intro3: {
          el:'Η NG Inox είναι εκεί για εσάς.',
          en:'NG Inox is here for you.'
        }
    };
    function setLang(lang) {
      document.documentElement.lang = lang;
      Object.entries(translations).forEach(([key,val]) => {
        document.querySelectorAll(`[data-i18n="${key}"]`).forEach(el => el.textContent = val[lang]);
      });
    }
    document.addEventListener('DOMContentLoaded', () => {
      const params = new URLSearchParams(window.location.search);
      const langParam = params.get('lang');
      const initialLang = (langParam === 'en' ? 'en' : 'el');
      setLang(initialLang);
    });
  </script>
